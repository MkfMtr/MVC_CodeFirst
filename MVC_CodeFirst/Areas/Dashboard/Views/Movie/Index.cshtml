@model Movie
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <span>@TempData["Success"]</span>
    </div>
}
else if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <span>@TempData["Error"]</span>
    </div>
}
<section class="content">
    <div class="container-fluid pt-2">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header bg-dark mb-3">
                        <h3 class="card-title">Add Movie</h3>
                    </div>

                    <form method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Movie Title</label>
                                <input type="text" class="form-control" asp-for="@Model.Title" placeholder="Enter Movie Title">
                            </div>

                            <div class="form-group">
                                <label>Movie Description</label>
                                <textarea type="text" class="form-control" asp-for="@Model.Description" placeholder="Enter Movie Description" rows="3" cols="30"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Director ID</label>
                                <input type="number" class="form-control" asp-for="@Model.DirectorId" placeholder="Enter Director ID">
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-dark">Save</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

